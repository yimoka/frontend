{
  // 保存时自动格式化代码
  "editor.formatOnSave": true,
  // 保存时自动执行的操作
  "editor.codeActionsOnSave": {
    // 自动修复所有 ESLint 错误
    "source.fixAll.eslint": "explicit",
    // 自动整理导入语句
    "source.organizeImports": "explicit"
  },
  // 设置缩进为 2 个空格
  "editor.tabSize": 2,
  // 在第 100 列显示垂直参考线
  "editor.rulers": [
    100
  ],
  // 自动删除行尾空格
  "files.trimTrailingWhitespace": true,
  // 文件末尾自动添加空行
  "files.insertFinalNewline": true,
  // 在状态栏始终显示 ESLint 状态
  "eslint.alwaysShowStatus": true,
  // 启用 ESLint 的格式化功能
  "eslint.format.enable": true,
  // 指定 ESLint 需要检查的文件类型
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "vue",
    "html",
    "typescript",
    "typescriptreact"
  ],
  // 搜索时排除的目录
  "search.exclude": {
    // 排除依赖包目录
    "**/node_modules": true,
    // 排除构建输出目录
    "**/dist": true,
    "**/build": true,
    // 排除测试覆盖率报告目录
    "**/coverage": true,
    // 排除版本控制目录
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    // 排除缓存目录
    "**/.cache": true,
    "**/.next": true,
    "**/.nuxt": true,
    // 排除日志目录
    "**/logs": true,
    "**/log": true,
    // 排除临时文件
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    // 排除包管理器目录
    "**/.pnpm-store": true,
    "**/.yarn": true,
    // 排除编辑器配置目录
    "**/.idea": true,
    "**/.vscode-test": true
  },
  // 自定义拼写检查词典，添加项目特定的单词
  "cSpell.words": [
    "dbaeumer",
    "IAPI",
    "kohler",
    "moxios",
    "popconfirm",
    "tseslint",
    "VITE",
    "yimoka"
  ]
}
